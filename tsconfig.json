{
	"compilerOptions": {
    "noEmit": true,
		"target": "es6",
		"lib": [
      "es5",
      "es2015.collection",
			"es2015",
			"dom"
		],
		"moduleResolution": "node",
		"module": "es2015",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
		"typeRoots": [
      "@types/jest",
      "@types/node",
      "./types"
    ],
    "baseUrl": "./src",
    "paths": {
      "tuex": ["./"]
    }
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./tests"
  ],
  "include": [
    "@types/jest",
    "@types/node",
  ]
}
