{
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es5",
      "es2015.collection",
      "es2015",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "@types/jest",
      "@types/node"
    ],
    "baseUrl": "./",
    "paths": {
      "misc": ["./src/misc"],
      "store": ["./src/store"],
      "tuex": ["./src"]
    }
  },
  "include": [
    "./src",
    "./node_modules/@types/jest",
    "./node_modules/@types/node"
  ],
  "exclude": [
    "./build",
    "./example"
  ]
}
