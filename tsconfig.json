{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "outDir": "./dist",
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"typeRoots": [
      "@types/jest",
      "@types/node",
      "./types"
		]
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./tests"
  ]
}
