{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"module": "commonjs",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"rootDirs": [
			"src",
			"test"
		],
		"typeRoots": [
			"@types/jest"
		]
	},
	"exclude": [
		"node_modules"
	]
}