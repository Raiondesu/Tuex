{
	"compilerOptions": {
    "noEmit": true,
		"target": "es6",
		"lib": [
			"es5",
			"es2015",
			"dom"
		],
		"moduleResolution": "node",
		"module": "es2015",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noUnusedParameters": true,
    "emitDecoratorMetadata": true,
		"typeRoots": [
      "@types/jest",
      "@types/node",
      "./types"
    ],
    "baseUrl": "./src"
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./tests"
  ]
}
