{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"module": "esnext",
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "outDir": "./esm",
		"lib": [
			"es6",
      "es2015",
      "dom"
		],
		"typeRoots": [
      "@types/jest",
      "@types/node",
      "./types"
		]
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./types",
    "./tests"
  ]
}
